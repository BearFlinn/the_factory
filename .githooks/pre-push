#!/usr/bin/env bash
# Pre-push hook for the_factory
# Final safety check before pushing

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
NC='\033[0m'

echo -e "${YELLOW}Running pre-push checks...${NC}"

# Full test suite (including ignored tests if any)
echo -e "\n${YELLOW}Running full test suite...${NC}"
if ! cargo test --all-targets 2>/dev/null; then
    echo -e "${RED}ERROR: Tests failed. Push aborted.${NC}"
    exit 1
fi
echo -e "${GREEN}âœ“ All tests passed${NC}"

# Check for uncommitted changes (sanity check)
if ! git diff --quiet || ! git diff --cached --quiet; then
    echo -e "${YELLOW}WARNING: You have uncommitted changes.${NC}"
fi

echo -e "\n${GREEN}Pre-push checks passed!${NC}"
